<Window x:Class="WPF_UI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="15">
            <Label HorizontalAlignment="Center">Login</Label>
            <TextBox Name="loginTb"></TextBox>
            <Label HorizontalAlignment="Center">Password</Label>
            <PasswordBox Name="passwordPb"></PasswordBox>
            <Button Height="30" Background="Green" Foreground="White" Margin="0,10,0,10" Name="signInBtn" Click="signInBtn_Click">SIGN IN</Button>
            <WrapPanel HorizontalAlignment="Center" Margin="10">
                <Label>Not registered?</Label>
                <Button Name="createAccountBtn" Background="White" Foreground="Green" Click="createAccountBtn_Click">Create an account</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
