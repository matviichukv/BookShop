<Window x:Class="WPF_UI.SendReview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        mc:Ignorable="d"
        Title="SendReview" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="2" Background="Green" Foreground="White" FontSize="20">Send review</Label>
        <TextBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" AcceptsReturn="True" Margin="20" Name="messageTb"></TextBox>
        <Button Grid.Column="0" Grid.Row="2" Margin="5" Background="Green" Foreground="White" Name="sendBtn" Click="sendBtn_Click">Send</Button>
        <Button Grid.Column="1" Grid.Row="2" Margin="5" Background="Red" Foreground="White" Name="closeBtn" Click="closeBtn_Click">Close</Button>
    </Grid>
</Window>
