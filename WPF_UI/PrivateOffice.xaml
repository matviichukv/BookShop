<Window x:Class="WPF_UI.PrivateOffice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        mc:Ignorable="d"
        Title="PrivateOffice" Height="500" Width="500" MinHeight="490" MinWidth="490">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.ColumnSpan="2" FontSize="14" Foreground="Orange" HorizontalAlignment="Center">Private office</Label>
        <Button Grid.Column="1" Grid.Row="3" Background="Green" Foreground="White" MaxWidth="200" Name="backToMainWindowBtn" Click="backToMainWindowBtn_Click">Continue search goods</Button>
        <StackPanel Grid.Column="0" Grid.Row="1">
            <Button FontSize="15" Name="personalInfoBtn" Background="White" Click="personalInfoBtn_Click">Personal Info</Button>
            <Button FontSize="15" Name="historyOrdersBtn" Background="White" Click="historyOrdersBtn_Click">History orders</Button>
            <Button FontSize="15" Name="historyReviews" Background="White" Click="historyReviews_Click">History reviews</Button>
        </StackPanel>
        <TabControl Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Name="tabContorl">
            <TabItem Visibility="Hidden">
                <StackPanel HorizontalAlignment="Center">
                    <Image Height="150" Source="E:\o-i-met-jk-rowling-facebook.jpg" Name="userAvatar"></Image>
                    <Label FontSize="20" Name="userNameLb">Name</Label>
                    <Label FontSize="20" Name="userEmailLb">Email</Label>
                </StackPanel>
            </TabItem>
            <TabItem Visibility="Hidden">
                
            </TabItem>
            <TabItem Visibility="Hidden">
                <ListBox Grid.ColumnSpan="3" Width="355" HorizontalAlignment="Center">
                    <ListBoxItem>
                        <DockPanel>
                            <Label DockPanel.Dock="Top">Harry Potter, 2017.06.14</Label>
                            <TextBox DockPanel.Dock="top" AcceptsReturn="True" MaxLines="2" MinLines="2" Width="330" VerticalScrollBarVisibility="Auto" IsReadOnly="True" TextWrapping="Wrap">aaa3333333333334444444555555555555566666666667aaaaaaaaaaaaaaaaaaadddbbbbbbbbbbdddddddddddaa</TextBox>
                            <WrapPanel DockPanel.Dock="Bottom">
                                <Button>Up</Button>
                                <Label>1</Label>
                                <Button>Down</Button>
                                <Label>0</Label>
                            </WrapPanel>
                        </DockPanel>
                    </ListBoxItem>
                </ListBox>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
